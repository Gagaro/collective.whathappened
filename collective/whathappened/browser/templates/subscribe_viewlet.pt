<div id="collective_whathappened_subscribe" tal:condition="not:view/is_anon" i18n:domain="collective.whathappened">
  <tal:block tal:condition="view/subscribed_show">
    <div class="subscribe" tal:condition="not:view/subscribed">
      <a tal:attributes="href string:${context/absolute_url}/@@collective_whathappened_subscribe_subscribe">
	<button i18n:translate="">Subscribe to this page</button>
      </a>
    </div>
  </tal:block>
  <div class="subscribe" tal:condition="view/subscribed">
    <a tal:attributes="href string:${context/absolute_url}/@@collective_whathappened_subscribe_unsubscribe">
      <button i18n:translate="">Unsubscribe from this page</button>
    </a>
  </div>
  <tal:block tal:condition="view/is_default_page">
    <tal:block tal:condition="view/subscribed_canonical_show">
      <div class="subscribe" tal:condition="not:view/subscribed_canonical">
	<a tal:attributes="href string:${view/canonical/absolute_url}/@@collective_whathappened_subscribe_subscribe">
	  <button i18n:translate="">Subscribe to this section</button>
	</a>
      </div>
    </tal:block>
    <div class="subscribe" tal:condition="view/subscribed_canonical">
      <a tal:attributes="href string:${view/canonical/absolute_url}/@@collective_whathappened_subscribe_unsubscribe">
	<button i18n:translate="">Unsubscribe from this section</button>
      </a>
    </div>
  </tal:block>
</div>
