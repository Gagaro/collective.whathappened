<dl class="actionMenu deactivated" id="notifications-hot" style="float: none; width: 20px; text-align: center">
  <dt class="actionMenuHeader" style="background-color: #eee">
    <a href="#" id="notifications-unseen" tal:content="view/unseenCount"></a>
  </dt>
  <dd class="actionMenuContent" style="background-color: #eee">
    <div tal:repeat="notification view/notifications" style="list-style-type: none">
      <span class="notification">
        <a tal:attributes="href string:${view/navigation_root}${notification/where}" tal:content="notification/show"></a>
      </span>
    </div>
    <a tal:attributes="href string:${view/navigation_root}/@@collective_whathappened_notifications_all">See all notifications</a>
  </dd>
</dl>
