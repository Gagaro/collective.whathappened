<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.whathappened">

  <body>

    <div metal:fill-slot="main"
	 tal:define="context_url string:${context/absolute_url};">
      <h1>COLLECTIVE.WHATHAPPENED</h1>
      <p>
	<strong tal:content="view/notificationsCount"></strong> notifications
      </p>
      <ul tal:repeat="notification view/notifications">
	<li><span tal:replace="notification/id"></span></li>
      </ul>
    </div>

  </body>
</html>
